<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.unipiloto.transporteapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@android:drawable/ic_menu_mapmode"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransporteApp">
        <activity android:name=".HistoricoRecogidas"></activity>
        <activity android:name=".CrearRecogida" />
        <activity android:name=".AsignarConductorVehiculo" />
        <activity android:name=".RegistrarVehiculo" />
        <activity android:name=".VehiculosasuNombre" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@menu/menu_toolbar" />

        <activity
            android:name=".MenuPrincipalComerciante"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MenuPrincipalPropietario"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".RegistroPropietario" />
        <activity android:name=".RegistroUsuario" />
        <activity android:name=".SeleccionTipoUsuario" />
        <activity android:name=".MenuPrincipalAdministrador" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>